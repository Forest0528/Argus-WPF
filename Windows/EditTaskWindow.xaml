<Window x:Class="Argus_WPF.Windows.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование задачи"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="450" Height="400"
        Background="{DynamicResource MahApps.Brushes.Background}"
        Loaded="Window_Loaded">

    <!-- Обёрточная сетка -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Редактирование задачи" 
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center" />

        <!-- Основная зона ввода -->
        <Border Grid.Row="1" Padding="15"
                CornerRadius="5"
                BorderBrush="#DDD" BorderThickness="1"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Исполнитель -->
                    <RowDefinition Height="Auto"/>
                    <!-- Описание -->
                    <RowDefinition Height="Auto"/>
                    <!-- Статус -->
                    <RowDefinition Height="Auto"/>
                    <!-- Дата создания -->
                    <RowDefinition Height="Auto"/>
                    <!-- Последнее обновление -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Исполнитель -->
                <TextBlock Text="Исполнитель:"
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="txtExecutor"
                         Margin="0,5"
                         Grid.Row="0" Grid.Column="1" />

                <!-- Описание -->
                <TextBlock Text="Описание задачи:"
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtDescription"
                         Margin="0,5"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="60"
                         Grid.Row="1" Grid.Column="1" />

                <!-- Статус -->
                <TextBlock Text="Статус:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Grid.Row="2" Grid.Column="0"/>
                <ComboBox x:Name="cmbStatus"
                          Margin="0,5"
                          Grid.Row="2" Grid.Column="1"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Не начато" />
                    <ComboBoxItem Content="Выполняется" />
                    <ComboBoxItem Content="Завершено" />
                </ComboBox>

                <!-- Дата создания -->
                <TextBlock Text="Дата создания:" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Grid.Row="3" Grid.Column="0"/>
                <!-- Если хочешь менять дату, можно DatePicker, иначе TextBlock -->
                <DatePicker x:Name="dateCreated"
                            Margin="0,5"
                            Grid.Row="3" Grid.Column="1" />

                <!-- Последнее обновление -->
                <TextBlock Text="Последнее обновление:" 
                           FontWeight="SemiBold"
                           Margin="0,5,264,5"
                           Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="txtLastUpdated"
                           Margin="0,5"
                           Grid.Row="4" Grid.Column="1" />
            </Grid>
        </Border>

        <!-- Кнопки Сохранить / Отмена -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить"
                    Width="90" Margin="5,0"
                    Background="{DynamicResource MahApps.Brushes.Background}"
                    Foreground="White"
                    Click="BtnSave_Click"/>
            <Button Content="Отмена"
                    Width="90" Margin="5,0"
                    Background="LightGray"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
