<Page x:Class="Argus_WPF.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки"
      Loaded="Page_Loaded">
    <!-- Фон страницы можно задать через динамический ресурс или конкретный цвет -->
    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <!-- Обертка-контейнер для настроек, с закругленными углами и небольшим отступом -->
        <Border CornerRadius="10" 
                Background="{DynamicResource CardBackgroundBrush}" 
                Padding="20" 
                Margin="20" 
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <!-- Заголовок страницы -->
                <TextBlock Text="Настройки уведомлений" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,15" />
                <!-- Блок Email уведомлений -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                    <CheckBox x:Name="CheckEmailNotify" 
                              Content="Email уведомления"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Checked="CheckBox_Checked" 
                              Unchecked="CheckBox_Checked"/>
                </StackPanel>
                <!-- Блок звуковых уведомлений -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                    <CheckBox x:Name="CheckSoundNotify" 
                              Content="Звуковые уведомления"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Checked="CheckBox_Checked" 
                              Unchecked="CheckBox_Checked"/>
                </StackPanel>
                <!-- Кнопка сброса настроек -->
                <Button x:Name="ResetButton" 
                        Content="Сбросить настройки" 
                        Click="ResetButton_Click" 
                        Width="150" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0" 
                        FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
