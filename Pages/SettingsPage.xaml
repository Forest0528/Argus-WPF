<Page x:Class="Argus_WPF.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:Argus_WPF.ViewModels"
      mc:Ignorable="d"
      Title="Настройки">

    <Grid Background="#f5f6fa">
        <Border CornerRadius="10"
                Background="White"
                Padding="20"
                Margin="20"
                BorderBrush="#dcdde1"
                BorderThickness="1"
                >
            <StackPanel>

                <TextBlock Text="🎨 Настройки темы"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#2c3e50"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Выберите тему:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontWeight="SemiBold"
                               Width="120"/>
                    <ComboBox Width="200"
                              ItemsSource="{Binding Themes}"
                              SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"/>
                </StackPanel>
                <CheckBox x:Name="CheckEmailNotify"
          Content="Email уведомления"
          Margin="0,5"
          Checked="CheckBox_Checked"
          Unchecked="CheckBox_Checked"/>

                <CheckBox x:Name="CheckSoundNotify"
          Content="Звуковые уведомления"
          Margin="0,5"
          Checked="CheckBox_Checked"
          Unchecked="CheckBox_Checked"/>


                <Button Content="Применить"
                        Width="120"
                        Margin="0,10,0,0"
                        Padding="8,4"
                        Background="#4A86FC"
                        Foreground="White"
                        Command="{Binding ApplyThemeCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>