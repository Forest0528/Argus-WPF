<Page x:Class="Argus_WPF.Pages.TaskManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:Argus_WPF.ViewModels"
      Title="TaskManagerPage"
      Background="#F8F8F8">

    <Page.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F1F3F5"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Не начато">
                    <Setter Property="Background" Value="#f2f2f2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Выполняется">
                    <Setter Property="Background" Value="#fff5cc"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Завершено">
                    <Setter Property="Background" Value="#d6ffd6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20,10" Background="#4A86FC">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📝" FontSize="28" Margin="0,0,10,0"/>
                <TextBlock Text="Управление задачами" FontSize="24" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- Фильтры -->
                <Border CornerRadius="8" Background="White" Padding="10" Margin="0 0 0 10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Поиск по исполнителю:" FontWeight="Bold"/>
                            <TextBox Width="200" Margin="0,5,0,0" 
                                     Text="{Binding FilterExecutor, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Статус:" FontWeight="Bold"/>
                            <ComboBox Width="150" Margin="0,5,0,0"
                                      SelectedValue="{Binding FilterStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="Все"/>
                                <ComboBoxItem Content="Не начато"/>
                                <ComboBoxItem Content="Выполняется"/>
                                <ComboBoxItem Content="Завершено"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Таблица задач -->
                <Border CornerRadius="8" Background="White" Padding="10">
                    <DataGrid ItemsSource="{Binding FilteredTasks}"
                              SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              RowStyle="{StaticResource StatusRowStyle}"
                              RowHeight="36"
                              ColumnHeaderHeight="40"
                              AlternatingRowBackground="#f9f9f9"
                              GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Исполнитель" Binding="{Binding Executor}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                            <DataGridTextColumn Header="Создано" 
                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yy HH:mm}}" Width="1.5*"/>
                            <DataGridTextColumn Header="Обновлено" 
                                Binding="{Binding LastUpdated, StringFormat={}{0:dd.MM.yy HH:mm}}" Width="1.5*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                    <TextBlock Text="Всего задач: " VerticalAlignment="Center" FontWeight="Bold" Foreground="#2c3e50"/>
                    <TextBlock Text="{Binding FilteredTasks.Count}" VerticalAlignment="Center" Margin="5 0 20 0"/>
                    <Button Content="Добавить" Command="{Binding AddTaskCommand}" 
                            Background="#4A86FC" Foreground="White" 
                            Padding="10 6" Margin="5" BorderThickness="0"/>
                    <Button Content="Удалить" Command="{Binding DeleteTaskCommand}" 
                            Background="#E74C3C" Foreground="White" 
                            Padding="10 6" Margin="5" BorderThickness="0"/>
                </StackPanel>

                <!-- 📊 Аналитика -->
                <GroupBox Header="📊 Аналитика по задачам" Margin="0,20,0,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding TotalTasks, StringFormat=Всего: {0}}" FontSize="14" Margin="5"/>
                        <TextBlock Text="{Binding NotStartedCount, StringFormat=Не начато: {0}}" Margin="5"/>
                        <TextBlock Text="{Binding InProgressCount, StringFormat=В процессе: {0}}" Margin="5"/>
                        <TextBlock Text="{Binding CompletedCount, StringFormat=Завершено: {0}}" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <!-- 🏆 Топ исполнителей -->
                <GroupBox Header="🏆 Топ исполнителей" Margin="0,20,0,0">
                    <ItemsControl ItemsSource="{Binding TopExecutors}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Key}" FontWeight="Bold" Width="200"/>
                                    <TextBlock Text="{Binding Value, StringFormat={}{0} задач}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <!-- Убрали блок с oxy:PlotView -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
